<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Memwa Questions App</title>

    <!-- google font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Edu+TAS+Beginner:wght@500&display=swap" rel="stylesheet">
    <!-- icons -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
    integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
      <!-- stylesheet link -->
      <link rel="stylesheet" href="/style.css">
</head>
<body>
    <section class="todo-container">
        <h2>Memwa Questions</h2>
        <section class='todo'>
            <form action="/" method="POST" class="todo-header">
                <textarea rows="2" cols="80" name="name">question</textarea>
                <input type="text" name="tag" value="tag">
                <button type="submit"><span class='fas fa-plus'></span>Add Question</button>
            </form>
            <ul class="todo-list">
                <% memwaQuestions.forEach(question => {%>
                    <li class="todo-list-item">
                        <div class="todo-list-item-title">
                            <%= question.name %>
                        </div>
                        <div class="todo-list-item-content">
                            <%= question.tag %>
                        </div>
                        <a href="/edit/<%=question._id %>" class="edit"><span class='fas fa-edit'></span></a>
                        <a href="/remove/<%=question._id %>" class="remove"><span class='fas fa-times'></span></a> 
                    </li>
                <% }) %>
            </ul>
        </section>
    </section>

</body>
</html>