<body>
  <header class="header">
    <section class="py-5 text-center container">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h6>User Dashboard</h6>
        <h1 class="fw-light">Welcome <%= user.firstName %></h1>
      </div>
    </section>
  </header>

<div class="container" style="padding: 20px;">
      <div class="question-header">
          <!-- Profile Section -->
          <section>
            <h5>Profile Info</h5>
              <p>First Name: <strong style="color: blue"><%= user.firstName %></strong></p>
              <p>Last Name: <strong style="color: blue"><%= user.lastName %></strong></p>
              <p>Email: <strong style="color: blue"><%= user.email %></strong></p>
          </section>
          <a href="/logout" class="col-3 btn btn-danger" style="padding: 30px;">Logout</a>
      </div>
<div class="container" style="padding: 20px;">
  <div class="question-header">
            <section>
            <h4>Add a Question to the Database</h4>
            <!-- <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="title" class="form-label">Title*</label>
                  <input type="text" class="form-control" id="title" name="title" placeholder="Title">
              </div>
